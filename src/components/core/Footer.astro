---
import { Icon } from 'astro-icon/components';
import Container from '../core/Container.astro';
import Plug from './Plug.astro';

const { footerSocials, copyrightName, background, color, showPlug: showPlug = true } =
  Astro.props;
---

<footer
  style={`--footer-bg:${background}; --footer-color:${color}`}
>
  <Container>
    <div class="footer-grid__container">
      <!-- Center Logo and Social Icons -->
      <div class="footer-left__container">
        <div class="footer-brand__container">
          <img src="/logo-trans.png" alt="Company Logo" class="footer-logo" />
          <ul class="footer-socials__list">
            {
              footerSocials.map((social) => (
                <li class="footer-socials__item">
                  <a
                    href={social.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="footer-socials__link"
                    title={`Open ${social.name} profile`}
                  >
                    <Icon name={social.icon} width={24} height={24} />
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>

      <!-- Center Map -->
      <div class="footer-map__container">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d9137.69360203076!2d3.834541340159084!3d39.99966155792951!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12be03f7975bdcb3%3A0x626b40ff83c10460!2sCarrer%20de%20Mallorca%2C%2020%2C%2007760%20Ciutadella%20de%20Menorca%2C%20Illes%20Balears!5e0!3m2!1ses!2ses!4v1730044818023!5m2!1ses!2ses"
          width="600"
          height="350"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade">
        </iframe>
      </div>
    </div>

    <div class="footer-copyright__container">
      {showPlug && <Plug/>}
      <p>&copy; {new Date().getFullYear()} {copyrightName}</p>
    </div>
  </Container>
</footer>

<style>
  footer {
    --footer-bg: var(--theme-primary);
    --footer-color: var(--theme-on-primary);
    width: 100vw;
    background-color: var(--footer-bg);
    color: var(--footer-color);
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }
  .footer-grid__container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2vh 0;
    gap: 7rem; /* Increased gap between logo and map */
  }
  .footer-left__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    border-right: 2px solid var(--theme-on-bg); /* Adjusted border size */
    padding-right: 2rem;
    height: fit-content; /* Adjusted height of the border to fit content */
  }
  .footer-brand__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
  .footer-logo {
    max-width: 350px;
    height: auto;
    display: block;
    margin: 0 auto;
  }
  .footer-socials__list {
    display: flex;
    justify-content: center;
    list-style: none;
    padding: 0;
    margin-top: 1rem;
  }
  .footer-socials__item {
    margin-right: 0.5rem;
  }
  .footer-socials__link {
    text-decoration: none;
  }
  .footer-map__container {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  iframe {
    border-radius: 30px;
    border: 0;
  }
  .footer-copyright__container {
    margin-top: 0.5rem;
    text-align: left; /* Align text to the left */
    position: absolute; /* Position it at the bottom left */
    bottom: 0;
    left: 0;
    padding: 0.75rem; /* Add padding for spacing */
    font-size: 0.7rem;
  }
  @media (max-width: 1200px) {
    .footer-map__container iframe {
      width: 400px; /* Smaller map width */
      height: 250px; /* Smaller map height */
    }
  }
  .footer-left__container {
    padding-right: 0; /* Remove padding */
  }
  .footer-grid__container {
    gap: 2rem; /* Reduced gap */
  }
  @media (max-width: 1000px) {
    .footer-grid__container {
      flex-direction: column;
      gap: 2rem;
    }
    .footer-left__container {
      border-right: none; /* Remove border */
      padding-right: 0; /* Remove padding */
    }
    .footer-map__container {
      display: none;
    }
    .footer-socials__list {
      margin-top: 0; /* Adjusted margin */
    }
    .footer-copyright__container {
      font-size: 0.6rem;
    }
  }
</style>
