---
import { Icon } from "astro-icon/components";
import ContentSection from "../sections/FeatureContentSection.astro";
import type { FeatureItem } from "../../types";

const features: Array<FeatureItem> = [
//  {
//    title: "Derecho de Familia",
//    description:
//      "Procedimiento de divorcio, división de bienes, custodia de los hijos, pención alimenticia.",
//    icon: "mdi:family",
//    link: "/landing-pages/derecho-familia",
//  },
  {
    title: "Responsabilidad Civil",
    description:
      "Regulación de compensaciones a personas o entidades que han sufrido daños o perjuicios debido a las acciones o falta de diligencia de otras.",
    icon: "mdi:handshake",
    link: "/landing-pages/derecho-civil",
  },
  {
    title: "Derecho Contractual",
    description:
      "Regulación de los acuerdos y compromisos asumidos entre personas, empresas y otras entidades.",
    icon: "mdi:contract",
    link: "/landing-pages/derecho-contratos",
  },
  {
    title: "Derechos Reales",
    description:
      "Regulación de las relaciones jurídicas entre personas y bienes, estableciendo quién tiene derechos sobre ellos y en qué medida.",
    icon: "mdi:account-lock",
    link: "/landing-pages/derecho-real",
  },
  {
    title: "Derecho Sucesorio",
    description:
      "Regulación de la sucesión mortis causa de las titularidades y relaciones jurídicas, tanto activas como pasivas, de una persona.",
    icon: "mdi:home-group",
    link: "/landing-pages/derecho-sucesorio",
  }
];
---

<ContentSection title="Areas de especialidad" id="features">
  <ul class="grid max-w-3xl grid-cols-1 md:grid-cols-2 lg:grid-cols-2 mx-auto">
    {
      features.map(({ title, description, icon, link }) => (
        <li class="flex flex-col items-center gap-6 bg-offset p-8 rounded-lg shadow-lg">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <h3>
            <a href={link} class="text-center font-extrabold text-lg hover:underline">
              {title}
            </a>
          </h3>
          <p class="text-center text-offset text-justify text-md">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>